<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">#000</item>

        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Department" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/LogoRed</item>
        <item name="colorPrimaryDark">#000</item>
        <item name="colorAccent">@color/colorAccent</item>


    </style>

    <style name="HiddenTitleTheme" parent="Department">
        <item name="windowNoTitle">false</item>
        <item name="windowActionBar">true</item>
    </style>
    <item type="id" name="home" />




    <style name="RatingBar" >
        <item name="colorControlNormal">@color/gray</item>
        <item name="colorControlActivated">@color/duskYellow</item>
        <item name="android:minHeight">20dp</item>
        <item name="android:maxHeight">20dp</item>
    </style>

</resources>
